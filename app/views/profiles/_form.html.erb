<%= form_for(@profile, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @profile.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h4>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "textfields">
    <div><%= f.text_field :name, placeholder: 'name' %></div> <br>
    <div><%= f.text_field :address, placeholder: 'address' %></div> <br>
    <div><%= f.text_field :phone, placeholder: 'phone' %></div> <br>
    <div><%= f.text_field :latitude, placeholder: 'latitude' %></div> <br>
    <div><%= f.text_field :longitude, placeholder: 'longitude' %></div> <br>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>